<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color2"
    android:orientation="vertical"
    tools:context=".fragmentos.GestionarIncidenciaFragment">

    <TextView
        android:id="@+id/txt_titulo_incidencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:fontFamily="@font/roboto_mono_bold_italic"
        android:hint="@string/titulo_fragmento_incidencias"
        android:textColorHint="@color/colorBotonBlanco"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/sp_opciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:backgroundTint="@color/colorBotonBlanco" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_gestion_incidencias">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>