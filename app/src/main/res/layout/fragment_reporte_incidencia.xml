<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_reporte_inc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondoBlanco"
    android:orientation="vertical"
    tools:context=".fragmentos.ReporteIncidenciaFragment">

    <ToggleButton
        android:id="@+id/btn_semestre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button"
        android:background="@drawable/stylo_boton_pressed"
        android:textColor="@color/colorFondoBlanco"
        android:textColorHighlight="@color/color1"
        android:textColorHint="@color/colorFondoBlanco"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:checked="true"
        android:text="ToggleButton"
        android:textOff="Primer Semestre"
        android:textOn="Segundo Semestre" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/inc_barras"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp" />

</LinearLayout>